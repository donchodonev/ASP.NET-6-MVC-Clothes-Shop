@{
    ViewData["Title"] = "Browse products";
}

@model IEnumerable<AllProductViewModel>;

<div class="container-fluid text-center">
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {

            <div class="card col-xl-2 col-lg-3 col-md-4 col-sm-12 m-2 border-0 shadow rounded" style="width: 20rem;">
                <img src=@product.ImageURL class="card-img-top img">
                <div class="card-body">
                    <div class="row">
                        <h4 class="col-6 card-title">@product.Price.ToString("F2")</h4>
                        <button type="submit" class="col-6 btn btn-primary">Add to cart</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>