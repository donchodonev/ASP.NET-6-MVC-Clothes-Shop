@{
    ViewData["Title"] = "Browse products";
}

@using ClothesShop.Data.Enums;

@model AllProductsQueryInputModel;

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow">
    <div class="container-fluid justify-content-end">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#bottom-navbar" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel-fill" viewBox="0 0 16 16">
                <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2z" />
            </svg>
        </button>

        <div id="bottom-navbar" class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
            <form method="get" class="d-sm-inline-flex justify-content-center">

                <a asp-action="All" type="submit" class="btn-sm btn-danger m-1 text-decoration-none">Clear filter</a>

                <select asp-for="Filter.PriceOrder" asp-items="@Html.GetEnumSelectList<PriceOrder>()" class="m-1 form-select-sm bg-dark text-white rounded p-1" aria-label="Default select example">
                </select>

                <select asp-for="Filter.GenderOptions" asp-items="@Html.GetEnumSelectList<Gender>()" class="m-1 form-select-sm bg-dark text-white rounded p-1" aria-label="Default select example">
                </select>

                <select asp-for="Filter.CategoryId" asp-items="@Model.Filter.CategoryOptions" class="m-1 form-select-sm bg-dark text-white rounded p-1" aria-label="Default select example">
                </select>

                <select asp-for="Filter.AgeOptions" asp-items="@Html.GetEnumSelectList<AgeGroup>()" class="m-1 form-select-sm bg-dark text-white rounded p-1" aria-label="Default select example">
                </select>

                <select asp-for="Filter.RatingOptions" asp-items="@Html.GetEnumSelectList<RatingValue>()" class="m-1 form-select-sm bg-dark text-white rounded p-1" aria-label="Default select example">
                </select>
                <button type="submit" class="btn-sm btn-primary m-1">Apply filter</button>
            </form>
        </div>

    </div>
</nav>

<partial name="_AllProductsPartial" model="@Model.Products"></partial>