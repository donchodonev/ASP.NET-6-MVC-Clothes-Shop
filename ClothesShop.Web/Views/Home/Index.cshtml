@model ProductGroupCollectionViewModel

@foreach (var group in Model.Groups)
{
    @if (group.Type == "GenderGroup")
    {
        <div class="container bg-light shadow-lg">
            <div class="px-4 pt-5 my-5 text-center border-bottom">
                <h1 class="display-4 fw-bold">@group.Name</h1>
                <div class="col-lg-6 mx-auto">
                    <p class="lead mb-4">@group.Description</p>
                </div>
                <div class="overflow-hidden" style="max-height: 10%;">
                    <div class="container px-5">
                        <a asp-route-GenderOptions="@(Enum.Parse<Gender>(group.Name))" asp-controller="Products" asp-action="All"><img src="@group.ImageURL" class="img-fluid border rounded-3 shadow-sm mb-4" alt="Example image" width="700" height="500" loading="lazy"></a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container bg-light shadow-lg">
            <div class="px-4 pt-5 my-5 text-center border-bottom">
                <h1 class="display-4 fw-bold">@group.Name</h1>
                <div class="col-lg-6 mx-auto">
                    <p class="lead mb-4">@group.Description</p>
                </div>
                <div class="overflow-hidden" style="max-height: 10%;">
                    <div class="container px-5">
                        <a asp-route-AgeOptions="@(Enum.Parse<AgeGroup>(group.Name))" asp-controller="Products" asp-action="All"><img src="@group.ImageURL" class="img-fluid border rounded-3 shadow-sm mb-4" alt="Example image" width="700" height="500" loading="lazy"></a>
                    </div>
                </div>
            </div>
        </div>
    }
}
