@using ClothesShop.Controllers.Models
@model AddProductInputModel

@{
    ViewData["Title"] = "Add Product Page";
}

<div class="text-center">
    <h1 class="display-4">Add Product</h1>
</div>

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for=Name class="form-control" type="text" placeholder="Product name" />
        <span class="text-center text-danger " asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for=Price class="form-control" type="number" placeholder="Product price" />
        <span class="text-center text-danger " asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input asp-for=Quantity class="form-control" type="number" placeholder="Product quantity" />
        <span class="text-center text-danger " asp-validation-for="Quantity"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <input asp-for=Description class="form-control" type="text" placeholder="Product description" />
        <span class="text-center text-danger " asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label>Manufacturer</label>
        <input asp-for=Manufacturer class="form-control" type="text" placeholder="Product Manufacturer" />
        <span class="text-center text-danger " asp-validation-for="Manufacturer"></span>
    </div>

    <div class="form-group">
        <label>Category</label>
        <select asp-items="Model.CategoryOptions" asp-for=Category class="form-control placeholder="Category">
            <option selected value="">Please select a category</option>

        </select>
        <span class="text-center text-danger " asp-validation-for="Category"></span>
    </div>

    <div class="form-group">
        <label>Size</label>
        <select asp-items="Model.SizeOptions" asp-for=Size class="form-control placeholder="Category">
            <option selected value="">Please select a size</option>
        </select>
        <span class="text-center text-danger " asp-validation-for="Size"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script src="~/js/custom-attribute-client-side-validation.js"></script>
}