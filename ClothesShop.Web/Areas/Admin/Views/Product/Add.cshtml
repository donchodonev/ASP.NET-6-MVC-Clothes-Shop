@using ClothesShop.Controllers.Models
@model AddProductInputModel

@{
    ViewData["Title"] = "Add Product Page";
}

<div class="text-center">
    <h1 class="display-4">Add Product</h1>
</div>

<form asp-area="Admin" asp-controller="Product" asp-action="Add" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for=Name class="form-control" type="text" placeholder="Product name"  />
        <span class="text-center text-danger " asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for=Name class="form-control" type="number"  placeholder="Product name"  />
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}